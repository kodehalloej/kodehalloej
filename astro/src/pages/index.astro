---
import MainLayout from "../layouts/MainLayout.astro";
import Social from "../components/Social.astro";
import { Picture } from "astro:assets";
import avatar from "../images/avatar.jpg";
---

<MainLayout>
  <div class="flex flex-1 items-center">
    <article
      class="mx-auto mt-1 mb-2 max-w-(--breakpoint-sm) px-1 text-center md:mt-1.5 md:mb-2.5 md:px-2"
    >
      <div class="mb-0.5">
        <Picture
          src={avatar}
          formats={["avif", "webp", "jpg"]}
          alt="Daniel MÃ¸ller Kristensen"
          width="900"
          class="mx-auto w-9 rounded-full"
        />
      </div>
      <h1 class="mt-0 text-4xl">Hi, I'm Daniel</h1>
      <p class="mb-0.75 text-lg">
        I'm a Backend Developer from Denmark. I specialize in Sitecore, Umbraco,
        C# and .NET.
      </p>
      <ul class="flex justify-center gap-0.75 text-3xl">
        <li>
          <Social name="GitHub" url="https://github.com/kodehalloej" />
        </li>
        <li>
          <Social
            name="LinkedIn"
            url="https://www.linkedin.com/in/kodehalloej"
          />
        </li>
      </ul>
    </article>
  </div>
</MainLayout>
