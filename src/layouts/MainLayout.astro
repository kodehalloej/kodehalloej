---
import "../styles/global.css";
import Logo from "../components/Logo.astro";
import NavigationItem from "../components/NavigationItem.astro";
import Contact from "../components/Contact.astro";

const title =
  (Astro.props.title ? Astro.props.title + " | " : "") + "Kodehall√∏j";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    {
      import.meta.env.MODE === "production" && (
        <link rel="sitemap" href="/sitemap-index.xml" />
      )
    }
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="icon" href="/favicon.ico" sizes="32x32" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <link
      rel="apple-touch-icon-precomposed.png"
      href="/apple-touch-icon-precomposed.png"
    />
    <link rel="manifest" href="/manifest.webmanifest" />
  </head>
  <body
    class="bg-off-white text-off-black dark:bg-off-black dark:text-off-white flex min-h-screen flex-col text-base"
  >
    <header>
      <div
        class="mx-auto flex max-w-(--breakpoint-lg) items-center justify-between p-1"
      >
        <a href="/" aria-label="Home">
          <Logo />
        </a>
        <nav>
          <ul class="flex gap-1 font-medium">
            <li>
              <NavigationItem name="About" url="/about" />
            </li>
          </ul>
        </nav>
      </div>
    </header>
    <main class="flex flex-1 flex-col">
      <slot />
    </main>
    <footer>
      <div
        class="mx-auto max-w-(--breakpoint-lg) justify-center p-1 text-sm"
      >
        <address class="not-italic text-center">
          <Contact
            type="Mail"
            value="mailto:e98d8482a982868d8c81888585868c83c78d82"
          />
          <br />
          <Contact type="Phone" value="tel:e9c2dddcd1d8dfdcdcd8dfd9" />
        </address>
      </div>
    </footer>
  </body>
</html>
